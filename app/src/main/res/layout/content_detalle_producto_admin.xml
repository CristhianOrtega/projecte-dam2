<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.proyecto.dam2.librosvidal.Activities.DetalleProducto"
    tools:showIn="@layout/app_bar_detalle_producto_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisFondo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/cajas"
        android:paddingLeft="@dimen/cajas"
        android:paddingRight="@dimen/cajas"
        android:paddingTop="@dimen/cajas"
        android:background="@color/grisFondo"
        android:id="@+id/scrollView3"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/White"
                android:text="Titulo"
                android:textSize="35dp"
                android:textAlignment="center"
                android:id="@+id/titulodet"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <View style="@style/Divider"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imageDet"
                android:src="@color/colorAccent"
                android:layout_below="@+id/titulodet"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/titulodet"
                android:layout_weight="2"
                />

            <View style="@style/Divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/White"
                android:text="0.00â‚¬"
                android:textAlignment="center"
                android:id="@+id/PreuDet"
                android:layout_below="@+id/imageDet"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_centerHorizontal="true" />

            <View style="@style/Divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/White"
                android:text="Categoria"
                android:textAlignment="center"
                android:id="@+id/CategoriaDet"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_centerHorizontal="true" />

            <View style="@style/Divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/White"
                android:text="descripcio"
                android:id="@+id/DescripcioDet"
                android:textSize="20dp"
                android:layout_below="@+id/PreuDet"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

            <View style="@style/Divider"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DescripcioDet"
                android:id="@+id/tableRow"
                android:layout_weight="0.2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@color/White"
                    android:layout_marginRight="5dp"
                    android:text="Venta"
                    android:id="@+id/ventaDet"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:text="Intercambio"
                    android:id="@+id/intercanviDet"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@color/White"
                    android:text="Peticion"
                    android:id="@+id/peticioDet"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
            </TableRow>

            <View style="@style/Divider"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="Contacta"
                android:id="@+id/buttonContacta"
                android:layout_below="@+id/tableRow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="Modificar"
                android:id="@+id/buttonModifica"
                android:onClick="editarProd"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="Eliminar"
                android:id="@+id/buttonEliminar"
                android:onClick="eliminarProd"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>

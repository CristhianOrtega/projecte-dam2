<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fotoPrin"
            android:adjustViewBounds="true"
            android:layout_toLeftOf="@+id/Preu"
            android:layout_toStartOf="@+id/Preu"
            android:layout_below="@+id/titol"
            android:src="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producte"
            android:id="@+id/titol"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/Preu"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00â‚¬"
            android:textSize="30dp"
            android:id="@+id/Preu"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/titol"
            android:layout_alignStart="@+id/titol"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>